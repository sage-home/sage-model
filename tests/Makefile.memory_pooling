all: memory_map_test memory_pool_test

memory_map_test:
	@echo "Running Memory Map Tests..."
	@cd $(CURDIR) && make -f Makefile.memory_map clean > /dev/null 2>&1
	@cd $(CURDIR) && make -f Makefile.memory_map > /dev/null 2>&1
	@cd $(CURDIR) && ./test_io_memory_map 2> /dev/null | grep -v "ERROR:" | grep -v "nonexistent_file.dat"
	@echo "Memory Map Tests completed successfully."

memory_pool_test:
	@echo "Running Memory Pool Tests..."
	@cd $(CURDIR) && sh test_memory_pool.sh > /dev/null 2>&1
	@echo "Memory Pool Tests completed successfully."

clean:
	@cd $(CURDIR) && make -f Makefile.memory_map clean > /dev/null 2>&1
	@rm -f $(CURDIR)/test_io_memory_map