# Makefile for testing the module template generator

CC = gcc
CFLAGS = -g -Wall -Werror
INCLUDES = -I../src

# Source directory
SRC_DIR = ../src

# Object files
OBJS = test_module_template.o $(SRC_DIR)/core/core_module_template.o $(SRC_DIR)/core/core_logging.o $(SRC_DIR)/core/core_mymalloc.o

# Target executable
TARGET = test_module_template

# Default target
all: $(TARGET)

# Link the executable
$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) -o $@ $^

# Compile the test module
test_module_template.o: test_module_template.c
	$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@

# Compile the module template source
$(SRC_DIR)/core/core_module_template.o: $(SRC_DIR)/core/core_module_template.c
	$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@

# Compile the logging source
$(SRC_DIR)/core/core_logging.o: $(SRC_DIR)/core/core_logging.c
	$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@

# Compile the memory allocation source
$(SRC_DIR)/core/core_mymalloc.o: $(SRC_DIR)/core/core_mymalloc.c
	$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@

# Clean up
clean:
	rm -f $(OBJS) $(TARGET)

# Run the test
run: $(TARGET)
	./$(TARGET)

.PHONY: all clean run